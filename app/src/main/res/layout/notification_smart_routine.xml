<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_notification_svg_dark_blue" />

        <TextView
            android:id="@+id/last_updated_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/block1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:elevation="1dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c_ind1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center|bottom"
                    android:background="#00C853" />

                <TextView
                    android:id="@+id/c_code1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="bottom"
                    android:paddingStart="14dp"
                    android:textColor="@color/stepview_mark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/c_room1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/c_time1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="top"
                    android:paddingStart="14dp"
                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/block2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart=".5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="1dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c_ind2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center|bottom"
                    android:background="#00C853" />

                <TextView
                    android:id="@+id/c_code2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="bottom"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/drawer_arrow_second_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/c_room2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:paddingStart="14dp"

                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/c_time2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="top"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/block3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart=".5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:elevation="1dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c_ind3"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center|bottom"
                    android:background="#00C853" />

                <TextView
                    android:id="@+id/c_code3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="bottom"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/drawer_arrow_second_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/c_room3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/c_time3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="top"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/block4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart=".5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:elevation="1dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c_ind4"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center|bottom"
                    android:background="#00C853" />

                <TextView
                    android:id="@+id/c_code4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="bottom"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/drawer_arrow_second_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/c_room4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/c_time4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="top"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/block5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:elevation="1dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/c_ind5"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center|bottom"
                    android:background="#00C853" />

                <TextView
                    android:id="@+id/c_code5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="bottom"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/drawer_arrow_second_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/c_room5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/c_time5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="top"
                    android:paddingStart="14dp"
                     
                    android:textColor="@color/stepview_mark"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/notification_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/home_page_item_button" />

    </LinearLayout>


</LinearLayout>
